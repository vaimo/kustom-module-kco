<script>
    require([
        'Magento_Customer/js/customer-data'
    ], function (customerData) {
        /**
         * In some Magento versions it can be that the minicart does not clear correctly. Therefore we
         * clear the storage cache manually.
         */
        customerData.initStorage();
        customerData.invalidate(['cart']);
        customerData.reload(['cart'], true);
    });
</script>

